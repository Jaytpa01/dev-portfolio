---
import { type CollectionEntry } from "astro:content";

interface Props {
	article: CollectionEntry<"article">;
}

const { article } = Astro.props;
const { Content } = await article.render();
---

<article
	class="prose prose-quoteless max-w-none prose-a:underline prose-a:decoration-2 prose-a:underline-offset-2 prose-code:before:content-none prose-code:after:content-none"
>
	<Content />
</article>
