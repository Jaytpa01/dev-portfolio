---
import { cva, type VariantProps } from "class-variance-authority";
import { cn } from "@lib/utils";

const cardVariants = cva("", {
	variants: {
		variant: {
			default: "bg-zinc-100",
			danger: "bg-red-400",
			warning: "bg-yellow-400",
			project: "bg-indigo-400",
		},
	},
	defaultVariants: {
		variant: "default",
	},
});

interface Props extends VariantProps<typeof cardVariants> {}

const { variant } = Astro.props;
---

<div class="relative">
	<div
		class="relative z-20 w-full rounded-lg border-2 border-black bg-zinc-100 p-4"
	>
		<slot />
	</div>

	<div
		class={cn(
			cardVariants({ variant }),
			"absolute left-2 top-2 h-full w-full rounded-lg border-2 border-black p-4",
		)}
	>
	</div>
</div>
