---
import { cn } from "@lib/utils";
import type { HTMLAttributes } from "astro/types";

type Props = HTMLAttributes<"a">;

const { class: className, ...attrs } = Astro.props;
---

<a
	class={cn(
		className,
		"underline decoration-2 underline-offset-2 hover:text-zinc-600",
	)}
	{...attrs}
>
	<slot />
</a>
