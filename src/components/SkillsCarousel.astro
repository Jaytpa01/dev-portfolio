---
const skills = [
	{ name: "React", icon: "devicon-react-original" },
	{ name: "Go", icon: "devicon-go-original-wordmark" },
	{ name: "TypeScript", icon: "devicon-typescript-original" },
	{ name: "JavaScript", icon: "devicon-javascript-plain" },
	{ name: "Tailwind", icon: "devicon-tailwindcss-plain" },
	{ name: "Postgres", icon: "devicon-postgresql-plain" },
	{ name: "Node.js", icon: "devicon-nodejs-plain" },
];
---

<div class="embla">
	<div class="embla__container gap-4">
		{
			skills.map((s) => (
				<div class="embla__slide min-w-fit rounded-lg border border-b-4 border-r-4 border-black p-3 text-center hover:bg-zinc-200">
					<i class={`${s.icon} colored text-4xl`} />
					<p>{s.name}</p>
				</div>
			))
		}
	</div>
</div>

<style>
	.embla {
		overflow: hidden;
	}
	.embla__container {
		display: flex;
	}

	.embla__slide {
		flex: 0 0 20%;
		/* min-width: fit-content; */
	}

	.embla__slide:last-child {
		margin-right: 1rem;
	}
</style>

<script
	is:inline
	src="https://unpkg.com/embla-carousel/embla-carousel.umd.js"
></script>

<script
	is:inline
	src="https://unpkg.com/embla-carousel-autoplay/embla-carousel-autoplay.umd.js"
></script>

<script is:inline>
	const emblaNode = document.querySelector(".embla");
	const options = { loop: true, dragFree: true };
	const emblaApi = EmblaCarousel(emblaNode, options, [
		EmblaCarouselAutoplay({
			delay: 2500,
			stopOnInteraction: false,
			// containScroll: "trimSnaps",
		}),
	]);

	console.log(emblaApi);

	console.log(emblaApi.slideNodes()); // Access API
</script>
