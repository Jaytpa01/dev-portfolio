---
import { links } from "./links";
---

<nav class="bg-neo-red sticky top-0 z-50 min-h-16 w-full">
	<div class="mx-auto flex h-16 max-w-[1440px] justify-between">
		<div class="bg-neo-yellow flex h-16 w-fit items-center px-3">
			<h1 class="text-center text-xl font-bold underline">
				<a href="/">JAY PARRY</a>
			</h1>
		</div>

		<button
			aria-label="Toggle Mobile Navigation"
			class="pr-3 md:hidden"
			id="mobile-nav-toggle"
		>
			<svg
				viewBox="0 0 33 24"
				width="33"
				xmlns="http://www.w3.org/2000/svg"
				class="stroke-black"
			>
				<path
					d="M2 2h28.3M2 12h28.3M2 22h28.3"
					stroke-linecap="round"
					stroke-linejoin="round"
					stroke-miterlimit="10"
					stroke-width="4"
				>
				</path>
			</svg>
		</button>
	</div>
</nav>

<div
	class="bg-green bg-neo-yellow fixed inset-y-16 z-10 hidden h-full w-full md:hidden"
	id="mobile-nav-modal"
	aria-hidden="true"
>
	<ul>
		{
			links.map((link) => (
				<li>
					<a href={link.href}>{link.label}</a>
				</li>
			))
		}
	</ul>
</div>

<script>
	const mobileModal = document.getElementById("mobile-nav-modal");
	const mobileNavToggle = document.getElementById("mobile-nav-toggle");

	function toggleMobileModal() {
		console.log("awa");
		if (!mobileModal) {
			return;
		}

		mobileModal.classList.toggle("hidden");
		mobileModal.ariaHidden =
			mobileModal?.ariaHidden === "true" ? "false" : "true";
	}

	mobileNavToggle?.addEventListener("click", toggleMobileModal);
</script>
