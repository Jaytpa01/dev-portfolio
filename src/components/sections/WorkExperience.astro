---
import Card from "@components/Card.astro";
import SectionHeading from "./SectionHeading.astro";
import NeoCard from "@components/NeoCard.astro";

interface Job {
	employer: string;
	role: string;
	companySite: string;
	period: string;
}
const jobs: Job[] = [
	{
		employer: "welcome.",
		role: "Fullstack Developer",
		companySite: "https://wearewelcome.com.au/",
		period: "June 2023 - present",
	},
	{
		employer: "Automated",
		role: "Software Engineer",
		companySite: "https://automated.net.au/",
		period: "March 2021 - May 2023",
	},
];
---

<section>
	<SectionHeading id="work">Work Experience</SectionHeading>

	<ul class="space-y-5">
		{
			jobs.map((job) => (
				<li>
					<NeoCard variant="danger">
						<h3 class="font-semibold underline">
							<a
								href={job.companySite}
								class="underline"
								rel="noreferrer noopener"
							>
								{job.employer} (<time>{job.period}</time>)
							</a>
						</h3>
						<p>{job.role}</p>
					</NeoCard>
				</li>
			))
		}
	</ul>
</section>
