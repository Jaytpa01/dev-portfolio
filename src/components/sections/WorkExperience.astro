---
import Card from "@components/Card.astro";

interface Job {
	employer: string;
	role: string;
	companySite: string;
	period: string;
}
const jobs: Job[] = [
	{
		employer: "welcome.",
		role: "Fullstack Developer",
		companySite: "https://wearewelcome.com.au/",
		period: "June 2023 - present",
	},
	{
		employer: "Automated",
		role: "Systems Engineer",
		companySite: "https://automated.net.au/",
		period: "March 2021 - May 2023",
	},
];
---

<section>
	<h2 class="pb-2 text-lg font-bold before:pr-1 before:content-['#']">
		Work Experience
	</h2>

	<ul class="space-y-3">
		{
			jobs.map((job) => (
				<li>
					<Card>
						<a
							href={job.companySite}
							class="underline"
							rel="noreferrer noopener"
						>
							{job.employer}
						</a>{" "}
						(<time>{job.period}</time>): {job.role}
					</Card>
				</li>
			))
		}
	</ul>
</section>
